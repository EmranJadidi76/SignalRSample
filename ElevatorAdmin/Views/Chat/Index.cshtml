@model List<DataLayer.Entities.Users.Users>
@{
    ViewData["Title"] = "Index";
}



<!-- ============================================================== -->
<!-- Start right Content here -->
<!-- ============================================================== -->

   
            <div class="row">
                <!-- end row -->
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="text-center card-box">
                            <div class="dropdown pull-right">
                                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                                    <i class="zmdi zmdi-more-vert"></i>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">ویرایش</a></li>
                                    <li><a href="#">حذف</a></li>
                                    <li><a href="#">بلاک کردن</a></li>
                                </ul>
                            </div>
                            <div>
                                <img src="~/@item.ProfilePic" class="img-circle thumb-xl img-thumbnail m-b-10" alt="profile-image">

                                <p class="text-muted font-13 m-b-30">
                                    @item.UserName
                                </p>

                                <div class="text-left">
                                    <p class="text-muted font-13"><strong>نام و نانم خانوادگی :</strong> <span class="m-l-15">@item.FirstName @item.LastName</span></p>

                                    <p class="text-muted font-13"><strong>موبایل :</strong><span class="m-l-15">@item.PhoneNumber</span></p>

                                    <p class="text-muted font-13"><strong>ایمیل :</strong> <span class="m-l-15">@item.Email</span></p>

                                </div>

                                <a href="/Chat/StartChat/@item.Id" class="btn btn-custom btn-rounded waves-effect waves-light">ارسال پیام</a>
                            </div>

                        </div>

                    </div> <!-- end col -->

                }
            </div>
            <!-- end row -->
            <!-- end row -->

